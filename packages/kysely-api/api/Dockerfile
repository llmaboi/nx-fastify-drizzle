# Build the docker image with `npx nx docker-build kysely-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t kysely-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system kysely-api && \
          adduser --system -G kysely-api kysely-api

COPY dist/packages/kysely-api/api kysely-api
RUN chown -R kysely-api:kysely-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix kysely-api --omit=dev -f install

CMD [ "node", "kysely-api" ]
